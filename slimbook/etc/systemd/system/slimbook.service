[Unit]
Description=Slimbook demo service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/share/slimbook/event-notify.py
Environment="PYTHONUNBUFFERED=x"
Environment="DISPLAY=:0"
Restart=always
RestartSec=0
NotifyAccess=all
TimeoutStartSec=180

[Install]
WantedBy=multi-user.target
